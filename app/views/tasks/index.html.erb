<%# allows for flash notice on view %>
<% if flash[:notice] %>
  <p class="notice"><div id="flash"><%= flash[:notice] %></div></p>
<% end %>


<h1> To Do -></h1>
<table>
	<tr><td><%= form_tag completed_tasks_path, :method => :put do %>
	<div style="margin-left:26px;"><table>
		<% @incomplete_tasks.each do |task| %>
			<tr>
			<%# column for each attribute %>
			<td class="checkbox"><%= check_box_tag "task_ids[]", task.id %></td>
			<td class="task_name"><b><%= task.task_name %></b></td>
			<td class="edit"><%= link_to image_tag("edit-icon.png", :size => "16x16"), edit_task_path(task) %></td>
			<td class="delete"><%= link_to image_tag("delete.png", :size => "15x15"),  task_path(task), method: :delete, data: { confirm: 'Are you sure you want to delete this task?' } %></td>
			</tr>
		<% end %>
		<% @completed_tasks.each do |task| %>
			<tr>
			<%# column for each attribute %>
			<%# seperate array for completed tasks, this will allow if/else statement in complete action in controller work for flash notice %>
			<td class="checkbox"><%= check_box_tag "task_idss[]", task.id, :id => "task.id_#{task.id}" -%></td>
			<td class="task_name"><b><%= task.task_name %></b></td>
			<td class="edit"><%= link_to image_tag("edit-icon.png", :size => "16x16"), edit_task_path(task) %></td>
			<td class="delete"><%= link_to image_tag("delete.png", :size => "15x15"),  task_path(task), method: :delete, data: { confirm: 'Are you sure you want to delete this task?' } %></td>
			</tr>
		<% end %>
	</table></div>
	<br>
	<div style="margin-left:25px;"><%= submit_tag 'Mark as Complete'%></div>

	<% end %>
	<td></tr>

	<tr class="none"><td><div style="margin-left:20px;"><%= render 'taskform' %></div></tr></td>
</table>
		




		



