<%# partial form, we are able to use simple form_for statement from new instead of edit version because the object @task is able to resource to the entire set of RESTFUL routes. So it is able to infer which URI method to use  %>

<%= form_for @task do |f| %>

  <%# allowing user to know that they cannot leave name space blank %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= @task.errors[:task_name].present? ? "has-error" : "" %> prohibited this task from being saved:
      </h2>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg%></li>
        <% end %>
      </ul>
    </div>
    <% end %>

  <p>
    <%= f.label :Name, "Name:" %><br>
    <%= f.text_field :task_name%>
  </p>
 
  <p>
    <%= f.label :description, "Description:" %><br>
    <%= f.text_area :description %>
  </p>

   <p>
    <%= f.label :category , "Category, (e.g., School, Work, etc.):" %><br>
    <%= f.text_area :category %>
  </p>

   <p>
    <%= f.label :due_date, "Due Date (YYYY-MM-DD):" %><br>
    <%= f.text_area :due_date %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
